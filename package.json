{
  "name": "api-automation-framework",
  "version": "1.0.0",
  "description": "API Automation Framework using Cucumber, Playwright, and TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --require src/step-definitions/api-steps.js --require src/step-definitions/ui-steps.js --require src/support/ui-hooks.js src/features/",
    "test:api": "cucumber-js --require src/step-definitions/api-steps.js src/features/users.feature src/features/posts.feature",
    "test:ui": "cucumber-js --require src/step-definitions/ui-steps.js --require src/support/ui-hooks.js src/features/google-search.feature src/features/form-interaction.feature src/features/navigation.feature",
    "test:headed": "cucumber-js --require src/step-definitions/api-steps.js --require src/step-definitions/ui-steps.js --require src/support/ui-hooks.js src/features/ --headed",
    "test:debug": "cucumber-js --require src/step-definitions/api-steps.js --require src/step-definitions/ui-steps.js --require src/support/ui-hooks.js src/features/ --debug",
    "test:parallel": "cucumber-js --require src/step-definitions/api-steps.js --require src/step-definitions/ui-steps.js --require src/support/ui-hooks.js src/features/ --parallel 4",
    "test:users": "cucumber-js --require src/step-definitions/api-steps.js src/features/users.feature",
    "test:posts": "cucumber-js --require src/step-definitions/api-steps.js src/features/posts.feature",
    "test:google": "cucumber-js --require src/step-definitions/ui-steps.js --require src/support/ui-hooks.js src/features/google-search.feature",
    "test:forms": "cucumber-js --require src/step-definitions/ui-steps.js --require src/support/ui-hooks.js src/features/form-interaction.feature",
    "test:navigation": "cucumber-js --require src/step-definitions/ui-steps.js --require src/support/ui-hooks.js src/features/navigation.feature",
    "playwright:install": "playwright install",
    "playwright:test": "playwright test",
    "playwright:report": "playwright show-report",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "api",
    "automation",
    "cucumber",
    "playwright",
    "typescript",
    "testing"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "12.2.0",
    "@playwright/test": "^1.55.0",
    "@types/chai": "^5.2.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chai": "^4.3.0",
    "dotenv": "^16.3.0",
    "joi": "^17.11.0",
    "moment": "^2.29.0",
    "uuid": "^9.0.0"
  }
}
